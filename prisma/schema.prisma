// Prisma schema file

datasource db {
  provider = "sqlite"
  url      = "file:./testing.db"
}

generator client {
  provider = "prisma-client-js"
}

model ORIGIN_SCHEMETYPE {
  id        Int     @id @default(autoincrement())
  SchemeType String
  SchemeMode String
  SchemeCode String @unique
}

model ORIGIN_SCHEME_NAME {
  id             Int     @id @default(autoincrement())
  SchemeType     String
  SchemeName     String
  SchemeAmount   Int
  SchemeDuration Int
  SchemePersons  Int
  BonusMonth     Int
  BonusAmount    Int
  SchemeValue    Int
  Commper        Int
  Commamt        Int
}

model ORIGIN_SCHEME_USER {
  id             Int    @id @default(autoincrement())
  SchemeType     String 
  SchemeName     String
  MemberName     String
  CardNo         String  @unique
  Gender         Boolean
  City           String
  Address        String
  Pincode        Int
  State          String
  District       String
  LandLine       String
  Mobile1        String
  Mobile2        String
  Email          String
  Dob            DateTime
  Anniversary    DateTime
  Nominee        String
  MobileNo       String
  Incharge       String
  JoinDate       DateTime
  CollectionPoint Boolean
  LastDatePaid   DateTime
  ActualDateToPay DateTime
  NextDateToPay   DateTime
}

model ORIGIN_SCHEME_USER_CARD {
  id            Int    @id @default(autoincrement())
  CardNo        String
  Month         DateTime
  RecNo         String
  RecDate       DateTime
  RecAmt        Int
  GoldWt        Int
  GoldAmt       Int
  ModeOfPay     String
  Balance       Int
}

model ORIGIN_SCHEME_USER_SETTLEMENT {
  id            Int   @id @default(autoincrement())
  SchemeType     String 
  SchemeName     String
  CardNo         String  @unique
  SchemeAmount   Int
  PaidAmount     Int
  BalanceAmount  Int
  GoldWt         Int
  GoldAmt        Int
  Settled        Boolean
  Discontinue    Boolean
  Description    String
}

model ORIGIN_SCHEME_RECEIPT {
  id            Int  @id @default(autoincrement())
  ReceiptNo     String @unique
  ReceiptDate   DateTime
  CardNo        String
  SchemeType     String 
  SchemeName     String
  MobileNo       String
  MemberName    String
  Address        String
  CollectionPoint Boolean
  PaymentCode      String
  AccNo          String
  Description    String
  Amount         Int
  GoldWt        Int
  GoldAmount    Int
  Incharge       String
}